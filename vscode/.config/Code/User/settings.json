{
  // formatters
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[cpp]": {},
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "js": true,
    "javascript": true,
    "cpp": false
  },
  // window -----------------
  "window.commandCenter": false,
  "window.zoomLevel": 0.9,
  "window.customTitleBarVisibility": "auto",
  // windows ------------- end
  // editor ------------------
  "editor.tabSize": 2,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "'JetBrainsMono NF', 'jetBrainsMono Nerd font', 'JetBrains Mono', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.indentation": true,
  "editor.inlayHints.enabled": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.letterSpacing": 0.1,
  "editor.linkedEditing": true,
  "editor.minimap.autohide": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 1,
  "editor.peekWidgetDefaultFocus": "editor",
  "editor.suggestSelection": "first",
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.multiDocumentOccurrencesHighlight": true,
  // "editor.lineHeight": 1.3,
  // "editor.stickyScroll.enabled": true,
  "editor.language.colorizedBracketPairs": [
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ],
    [
      "(",
      ")"
    ],
    [
      "{{",
      "}}"
    ]
    // ,
    // [
    //     "<",
    //     ">"
    // ]
    // ["<*>", "<*/>"],
  ],
  "editor.unicodeHighlight.allowedCharacters": {
    "י": true,
    "ט": true,
    "ו": true,
    "ס": true,
    "ן": true
  },
  // editor -------------- end
  // diffEditor ----------
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  // diffEditor end ----------
  // terminal ---------
  "terminal.integrated.fontFamily": "'monospace', 'jetBrainsMono Nerd font'",
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/zsh"
    }
  },
  "terminal.integrated.commandsToSkipShell": [
    "cmake.debug"
  ],
  "workbench.activityBar.location": "top",
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#FFD700", // gold
    "editorBracketHighlight.foreground2": "#55ffff", // tchelet
    "editorBracketHighlight.foreground3": "#00f900", // nice green
    "editorBracketHighlight.foreground4": "#bc13fe", // dark purple
    "editorBracketHighlight.foreground5": "#ff11ff", // better pink
    "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
  },
  "workbench.settings.applyToAllProfiles": [
    "diffEditor.experimental.collapseUnchangedRegions",
    "diffEditor.experimental.useVersion2",
    "workbench.editor.enablePreview",
    "workbench.colorCustomizations",
    "workbench.activityBar.location",
    "terminal.integrated.fontLigatures"
  ],
  "workbench.tree.enableStickyScroll": true,
  // workbench end -------
  "explorer.confirmDelete": false,
  // git ----------
  "git.decorations.enabled": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.closeDiffOnOperation": true,
  "git.mergeEditor": true,
  "git.blame.editorDecoration.enabled": true,
  "github.gitProtocol": "ssh",
  // -------- git end
  //
  // ************
  // ** language specific settings
  // ************
  // javascript ---------
  // "javascript.inlayHints.parameterNames.enabled": "all",
  // "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  // "typescript.inlayHints.parameterNames.enabled": "all",
  //------ javascript end
  // cpp ---------
  // cmake -----
  // "cmake.generator": "Unix Makefiles",
  "cmake.configureOnOpen": false,
  "cmake.showOptionsMovedNotification": false,
  // cmake -----
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.enhancedColorization": "enabled",
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.simplifyStructuredComments": false,
  "C_Cpp.vcFormat.indent.caseLabels": true,
  "C_Cpp.vcFormat.newLine.beforeElse": false,
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
  //------ cpp end
  // *************
  // ** extensions
  // *************
  "simpleIcons.hideArrows": true,
  "vsicons.dontShowNewVersionMessage": true,
  "standard.enableGlobally": true,
  "standard.engine": "semistandard",
  "standard.autoFixOnSave": true,
  "standard.enable": true,
  "standard.run": "onType",
  "standard.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "standard.options": {
    "globals": [
      "jQuery",
      "_",
      "angular"
    ]
  },
  "todo-tree.tree.showScanModeButton": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // telemetry ------------
  "redhat.telemetry.enabled": false,
  "intelephense.telemetry.enabled": false,
  "sonarlint.disableTelemetry": true,
  "dotnetAcquisitionExtension.enableTelemetry": false,
  "gitlens.telemetry.enabled": false,
  "cody.telemetry.level": "off",
  // "telemetry.telemetryLevel": "off",
  // -------- telemetry end
  "code-runner.enableAppInsights": false,
  "php.suggest.basic": false,
  "remote.SSH.localServerDownload": "off",
  "remote.SSH.useLocalServer": true,
  "cSpell.language": "en,he",
  "errorLens.delay": 1500,
  "errorLens.enabledInMergeConflict": false,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "better-comments.tags": [
    {
      "tag": "//",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.views.formats.commits.label": "${❰ tips ❱  }${message}",
  "gitlens.views.commitDetails.files.layout": "tree",
  "CppHelper.SourceNotFoundBehavior": "Create source file",
  "CppHelper.SourcePattern": [
    "{FILE}.cpp",
    "{FILE}.c",
    "{FILE}.inl",
    "/src/{FILE}.cpp"
  ],
  // "sonarlint.pathToCompileCommands": "build/compile_commands.json",
  "sonarlint.output.showAnalyzerLogs": true,
  "sonarlint.output.showVerboseLogs": true,
  "sonarlint.rules": {
    "cpp:S125": {
      "level": "off"
    },
    "Web:BoldAndItalicTagsCheck": {
      "level": "off"
    },
    "javascript:S125": {
      "level": "off"
    },
    "javascript:S6544": {
      "level": "off"
    },
    "typescript:S6759": {
      "level": "off"
    }
  },
  "cSpell.customDictionaries": {
    "custom-dictionary-user": {
      "name": "custom-dictionary-user",
      "path": "~/.cspell/custom-dictionary-user.txt",
      "addWords": true,
      "scope": "user"
    }
  },
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },
  "markdown.experimental.updateLinksOnFileMove.enabled": "prompt",
  "projectManager.git.baseFolders": [
    "/home/naftali/Documents/program"
  ],
  "browse-lite.chromeExecutable": "/usr/bin/google-chrome-stable",
  "liveServer.settings.donotShowInfoMsg": true,
  "files.autoSave": "afterDelay",
  "vetur.format.options.tabSize": 2,
  "thunder-client.saveToWorkspace": true,
  "foldOnOpen.targets": [
    "Level2",
    "Recursively"
  ],
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "vite.autoStart": false,
  "svelte.enable-ts-plugin": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Aura Dark (Soft Text)"
}