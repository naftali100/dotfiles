    IdentitiesOnly yes

    ControlMaster auto
    ControlPath ~/.ssh/masters/master-%r@%h:%p
    ControlPersist yes
    
    Compression yes

    X11Forwarding no

    # UseKeychain yes
    # ForwardAgent yes

    ServerAliveInterval 10
    ServerAliveCountMax 3
    TCPKeepAlive yes
    ConnectTimeout 60


    StrictHostKeyChecking ask
    HashKnownHosts yes
    AddKeysToAgent yes

    KexAlgorithms mlkem768x25519-sha256,sntrup761x25519-sha512@openssh.com,curve25519-sha256

