# fnm
FNM_PATH="$HOME/.local/share/fnm"
if [ -d "$FNM_PATH" ]; then
  export PATH="$PATH:$FNM_PATH"
  eval "`fnm env`"
  source <(fnm completions --shell $SHELL_NAME)
fi


